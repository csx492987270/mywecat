<!-- audio.wxml -->
<audio
  poster="{{poster}}"
  name="{{name}}"
  author="{{author}}"
  src="{{src}}"
  id="myAudio"
  controls="{{show}}"
  loop
></audio>

<button type="primary" class='btn' bindtap="audioPlay">播放</button>
<button type="primary" class='btn' bindtap="audioPause">暂停</button>
<button type="primary" class='btn' bindtap="audio14">设置当前播放时间为14秒</button>
<button type="primary" class='btn' bindtap="audioStart">回到开头</button>